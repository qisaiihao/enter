<view class="tab-bar">
  <view class="tab-bar-item" 
        wx:for="{{list}}" 
        wx:key="index"
        data-index="{{index}}"
        data-path="{{item.pagePath}}"
        bindtap="switchTab">
    <image class="tab-bar-icon" 
           src="{{selected === index ? item.selectedIconPath : item.iconPath}}"></image>
    <text class="tab-bar-text" 
          style="color: {{selected === index ? selectedColor : color}}">{{item.text}}</text>
  </view>
</view>
