.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 200rpx;
  display: flex;
  align-items: flex-end;
  justify-content: space-around;
  z-index: 1000;
  background: white;
  padding-bottom: 20rpx;
  box-sizing: border-box;
}

.tab-bar-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  height: 100%;
}

/* 外层：圆角裁剪与悬浮阴影 */
.icon-wrap {
  width: 88rpx;
  height: 88rpx;
  border-radius: 24rpx;
  background: #f8f8f8;
  overflow: hidden;
  box-shadow: 0 18rpx 32rpx rgba(0, 0, 0, 0.16);
  transition: box-shadow 0.22s ease;
}

.icon-wrap.pressed {
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 内层：按压状态与内阴影 */
.icon-inner {
  width: 100%;
  height: 100%;
  background: #ffffff;
  box-shadow: none;
  transition: transform 0.22s ease, box-shadow 0.22s ease;
}

.icon-inner.active {
  box-shadow: inset 0 10rpx 20rpx rgba(0, 0, 0, 0.22);
  transform: translateY(3rpx) scale(0.97);
}

.icon-img {
  width: 100%;
  height: 100%;
  display: block;
}

/* 如不需要文字，可隐藏。保留占位确保布局稳定 */
.tab-bar-text {
  font-size: 22rpx;
  color: transparent;
  height: 0;
  overflow: hidden;
}
