}

.back-btn {
  position: absolute;
  top: 24rpx;
  left: 24rpx;
  width: 56rpx;
  height: 56rpx;
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.1);
