  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  gap: 40rpx;
}
.detail-item-inline {
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
  white-space: nowrap;
}

/* 底部加载状态样式 */
.loading-footer {
  text-align: center;
  padding: 20rpx 0;
  color: #999;
  font-size: 14px;
}