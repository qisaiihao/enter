/* pages/add/add.wxss */
.container {
    padding: 30rpx;
  }
  
  /* 模式切换栏 */
  .mode-switcher {
    display: flex;
    margin-bottom: 30rpx;
    background: #f5f5f5;
    border-radius: 50rpx;
    padding: 6rpx;
  }
  
  .mode-btn {
    flex: 1;
    padding: 20rpx;
    border: none;
    background: transparent;
    border-radius: 44rpx;
    font-size: 28rpx;
    transition: all 0.3s ease;
  }
  
  .mode-btn.active {
    background: #07c160;
    color: white;
    box-shadow: 0 4rpx 16rpx rgba(7, 193, 96, 0.3);
  }
  
  /* 原创勾选 */
  .original-checkbox {
    display: flex;
    align-items: center;
    margin-bottom: 30rpx;
    padding: 20rpx;
    background: #f8f9fa;
    border-radius: 12rpx;
  }
  
  .checkbox-icon {
    font-size: 40rpx;
    margin-right: 15rpx;
    color: #999;
  }
  
  .checkbox-icon.checked {
    color: #07c160;
  }
  
  .checkbox-text {
    font-size: 30rpx;
    color: #333;
  }
  
  /* 图片上传信息 */
  .uploader-info {
    margin-bottom: 20rpx;
    text-align: center;
  }
  
  .poem-image-tip {
    font-size: 26rpx;
    color: #666;
    background: #e8f5e9;
    padding: 10rpx 20rpx;
    border-radius: 8rpx;
    display: inline-block;
  }
  
  .image-count {
    font-size: 28rpx;
    color: #999;
  }
  
  .input-title {
    height: 100rpx;
    border: 1px solid #eee;
    border-radius: 10rpx;
    margin-bottom: 30rpx;
    padding: 0 20rpx;
    font-size: 32rpx;
  }
  
  .textarea-content {
    width: 100%;
    height: 600rpx;
    border: 1px solid #eee;
    border-radius: 10rpx;
    padding: 20rpx;
    box-sizing: border-box; /* 保证padding不会撑大宽度 */
    font-size: 28rpx;
  }

  .char-count {
    text-align: right;
    font-size: 24rpx;
    color: #999;
    margin-top: 10rpx;
    margin-bottom: 20rpx;
  }
  
  .submit-button {
    margin-top: 40rpx;
  }
  .uploader-container {
    margin-top: 30rpx;
  }
  .uploader-button {
    width: 200rpx;
  }

  /* 多张图片预览样式 */
  .image-preview-container {
    display: flex;
    flex-wrap: wrap;
    gap: 20rpx;
    margin-top: 20rpx;
  }

  .image-preview-item {
    position: relative;
    width: 200rpx;
    height: 200rpx;
  }

  .image-swiper {
    width: 100%;
    min-height: 200rpx;
    height: auto;
    background: transparent;
  }
  .swiper-item {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: auto;
  }
  .preview-image {
    width: 100%;
    height: auto;
    border-radius: 10rpx;
    object-fit: contain;
  }

  .image-remove-btn {
    position: absolute;
    top: -10rpx;
    right: -10rpx;
    width: 40rpx;
    height: 40rpx;
    background-color: #ff4444;
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24rpx;
    font-weight: bold;
  }

  .add-more-btn {
    width: 200rpx;
    height: 200rpx;
    border: 2px dashed #ddd;
    border-radius: 10rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #999;
    font-size: 60rpx;
  }
.uploader-controls {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.re-choose-btn {
  margin-top: 20rpx;
  color: #07c160;
  font-size: 28rpx;
}