page {
  margin: 0;
  padding: 0;
  height: 100vh;
  overflow: hidden;
}

.splash-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100vw;
  height: 100vh;
  margin: 0;
  padding: 0;
  overflow: hidden;
  background-color: #000;
  opacity: 1;
  transition: opacity 0.8s ease-in-out;
}

.splash-container.fade-out {
  opacity: 0;
}

.splash-image {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
  transform: scale(1);
  transition: transform 0.8s ease-in-out;
}

.splash-image.zoom-out {
  transform: scale(1.1);
}

.loading-indicator {
  position: absolute;
  bottom: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
  z-index: 10;
}