/* pages/favorite-content/favorite-content.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.loading-text {
  color: #999;
  font-size: 28rpx;
}

.favorites-container {
  padding: 20rpx;
}

.favorite-item {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.author-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.author-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.author-details {
  flex: 1;
}

.author-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.post-time {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

.post-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.post-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 20rpx;
  white-space: pre-wrap;
}

.post-images {
  margin-bottom: 20rpx;
}

.single-image {
  width: 100%;
}

.single-image .post-image {
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
}

.multi-images {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.multi-images .post-image {
  width: calc(33.333% - 6rpx);
  height: 200rpx;
  border-radius: 8rpx;
}

.favorite-time {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.favorite-label {
  margin-right: 8rpx;
}

.poem-badge {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background: rgba(7, 193, 96, 0.9);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.empty-subtext {
  font-size: 26rpx;
  color: #999;
}

.loading-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
}

.no-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
  color: #999;
  font-size: 26rpx;
}
